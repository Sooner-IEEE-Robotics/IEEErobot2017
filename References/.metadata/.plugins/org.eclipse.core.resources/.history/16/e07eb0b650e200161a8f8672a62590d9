#include <map>
#include <cmath>
#include <cctype>
#include <string>
#include <vector>
#include <sstream>
#include <iomanip>
#include <iostream>
#include <algorithm>

#include "PIDController.h"

using namespace std;

#define pb push_back

float constants[3] = {1, 0.001, 0.0};

PIDController pidController(0, constants);

float number;

int main()
{
	number = (rand() % 100)-50;

	cout<<"Random Number: "<<number<<endl;

    while(abs(number) > 0.1)
    {
        float output = pidController.GetOutput(0,number);

        number += output;

        cout<<number<<endl;
    }

    return 0;
}
